<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:src="@drawable/banana_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="@string/enter_the_code_that_you_received_via_sms"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp" />

    <com.chaos.view.PinView
        android:id="@+id/pin_view"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_32sdp"
        android:cursorVisible="true"
        android:fontFamily="@font/cairo_semibold"
        android:hint="####"
        android:inputType="text"
        android:itemBackground="@drawable/shape_edit_text"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:cursorColor="@color/face"
        app:cursorWidth="2dp"
        app:itemCount="4"
        app:itemHeight="@dimen/_40sdp"
        app:itemRadius="6dp"
        app:itemSpacing="@dimen/_16sdp"
        app:itemWidth="@dimen/_40sdp"
        app:lineColor="@color/colorPrimary"
        app:lineWidth="1dp"
        app:viewType="rectangle" />


    <TextView
        android:id="@+id/change_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text="@string/edit_mobile_number"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13ssp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp">

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:text="@string/resend_code"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>
</LinearLayout>