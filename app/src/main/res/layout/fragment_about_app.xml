<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.homeCycle.home.settings.SettingsFragment">

    <include layout="@layout/app_bar" />

    <TextView
        android:id="@+id/fragment_about_app_tv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/about_us"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@color/gray_btn_bg_color" />

    <TextView
        android:id="@+id/fragment_about_app_tv_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/contact_us"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@color/gray_btn_bg_color" />

    <TextView
        android:id="@+id/fragment_about_app_tv_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/terms_conditions"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@color/gray_btn_bg_color" />

    <TextView
        android:id="@+id/fragment_about_app_tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/privacy_policy"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@color/gray_btn_bg_color" />



    <TextView
        android:id="@+id/fragment_about_app_tv_app_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/app_review"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@color/gray_btn_bg_color" />

    <TextView
        android:id="@+id/fragment_about_app_tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:fontFamily="@font/cairo_semibold"
        android:paddingVertical="@dimen/_16sdp"
        android:text="@string/sharing"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_32sdp"
        android:layout_gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/fragment_about_app_iv_go_web"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_global_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fragment_about_app_iv_go_telegram"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_telegram" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fragment_about_app_iv_go_insta"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_instagram" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fragment_about_app_iv_go_whats"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_whatsapp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>

</LinearLayout>